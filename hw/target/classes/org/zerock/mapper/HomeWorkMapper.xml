<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.HomeWorkMapper">
	<select id="getList" resultType="org.zerock.domain.HomeWorkVO">
		select * from tbl_homework where id > 0 order by id desc
	</select>
	
	<insert id="insert">
		insert into tbl_homework(id,name,age,birth)
		values(seq_homework.nextval,#{name}, #{age}, #{birth})
	</insert>
	
	<insert id="inserteSelectKey">
		<selectKey keyProperty="id" order="BEFORE" resultType="Long">
			select seq_homework.nextval from dual
		</selectKey>
		insert into tbl_homework(id,name,age,birth)
		values(#{id},#{name}, #{age}, #{birth})
	</insert>
	
	<select id="read" resultType="org.zerock.domain.HomeWorkVO">
		select * from tbl_homework where id = #{id}
	</select>
	
	<delete id="delete">
		delete from tbl_homework where id = #{id}
	</delete>
	
	<update id="update">
		update tbl_homework set 
		name = #{name},
		age = #{age},
		birth = #{birth}
		where id = #{id}
	</update>
</mapper>